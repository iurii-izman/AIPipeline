    "Set Notion write failed": {
      "main": [
        [
          {
            "node": "Telegram: notion fail alert",
            "type": "main",
            "index": 0
          }
        ]
      ]
    }
  },
  "settings": {
    "callerPolicy": "workflowsFromSameOwner",
    "availableInMCP": false
  }
}
